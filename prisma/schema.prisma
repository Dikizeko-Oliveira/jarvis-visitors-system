// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Rooms {
  id              String     @id @default(uuid())
  name            String
  active_visitors Int?       @default(0)
  visitors        Int?       @default(0)
  is_available    Boolean    @default(true)
  created_at      DateTime   @default(now())
  Visitors        Visitors[]
  Sessions        Sessions[]
  OnHold          OnHold[]

  @@map("rooms")
}

model Visitors {
  id         String     @id @default(uuid())
  name       String
  cpf        String
  email      String?
  birthdate  String?
  is_active  Boolean    @default(false)
  room_id    String
  created_at DateTime   @default(now())
  room       Rooms?     @relation(fields: [room_id], references: [id])
  Sessions   Sessions[]
  OnHold     OnHold[]

  @@map("visitors")
}

model Sessions {
  id         String    @id @default(uuid())
  visitor_id String
  room_id    String
  is_active  Boolean   @default(true)
  entry_date DateTime  @default(now())
  exit_date  DateTime?
  room       Rooms?    @relation(fields: [room_id], references: [id])
  visitor    Visitors? @relation(fields: [visitor_id], references: [id])

  @@map("sessions")
}

model OnHold {
  id         String @id @default(uuid())
  visitor_id String
  room_id    String

  created_at DateTime  @default(now())
  exit_date  DateTime?
  room       Rooms?    @relation(fields: [room_id], references: [id])
  visitor    Visitors? @relation(fields: [visitor_id], references: [id])

  @@map("on_hold")
}

model Logs {
  id    String @id @default(uuid())
  topic String

  created_at DateTime @default(now())

  @@map("logs")
}

model Users {
  id            String @id @default(uuid())
  name          String
  email         String
  role          String @default("member")
  password_hash String

  created_at DateTime @default(now())

  @@map("users")
}
